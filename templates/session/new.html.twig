{% extends 'base.html.twig' %} {% block title %}Hello SessionController!{%
endblock %} {% block body %}

<div class="w-full h-screen overflow-x-hidden border-t flex flex-col">
  <main class="w-full flex-grow p-6">
    <h1 class="w-full text-3xl text-black">Add a session</h1>
    <a href="{{ path('app_session') }}"><i class="fa-solid fa-rotate-left"></i></a>

    <div class="flex flex-wrap mb-10">
      <div class="w-full lg:w-1/2 my-6 pr-0 lg:pr-2">
        <p class="text-xl pb-6 flex items-center">
          <i class="fas fa-list mr-3"></i> New session Form
        </p>
        <div class="leading-loose">
          {{
            form_start(formAddSession, {
              attr: { class: "p-10 bg-white rounded shadow-xl" }
            })
          }}

          <div class="row">
            <div class="col-sm">
              {{ form_row(formAddSession.title) }}
            </div>
            <div class="col-sm">
              {{ form_row(formAddSession.nbPlaces) }}
            </div>
          </div>
          <div class="flex gap-2">
            <div class="w-full">
              {{ form_row(formAddSession.startDate) }}
            </div>
            <div class="w-full">
              {{ form_row(formAddSession.endDate) }}
            </div>
          </div>
          <div class="row">
            {{ form_row(formAddSession.programDetails) }}
          </div>
          <div class="row">
            {# <div class="col-sm">
              {{ form_row(formAddSession.students) }}
            </div> #}
            <div class="col-sm">
              {{ form_row(formAddSession.former) }}
            </div>
            <div class="col-sm">
              {{ form_row(formAddSession.category) }}
            </div>
          </div>
          <div class="mt-5">
            {{ form_row(formAddSession.add) }}
          </div>

          {{ form_end(formAddSession) }}
        </div>
      </div>
    </div>
  </main>
</div>

{% endblock %}
