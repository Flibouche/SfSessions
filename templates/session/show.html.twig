{% extends 'base.html.twig' %}

{% block title %}Session Details{% endblock %}

{% block body %}

<h1>Session Detail</h1>

<a href="{{ path('app_session') }}"><i class="fa-solid fa-rotate-left"></i></a>


<h2>{{ session }}</h2> <br>

Session start : {{ session.startDate | date("d.m.Y") }} <br>
Session end : {{ session.endDate | date("d.m.Y") }} <br>
Number of places : {{ session.nbPlaces }} <br>
Program Details : {{ session.programDetails }} <br>

<h2>Programme</h2>
<br>
<p>Scheduled Modules :</p>
{% for program in session.programs %}
{{ program.module }} {{ program.nbDays }} jours<br>
{% endfor %}

<br>

<p>Unscheduled Modules :</p>
{% for program in unscheduledModules %}
    <li>{{ program }}</li>
{% endfor %}

<br>

<p>Students registered :</p>
{% for student in session.students %}
<li>{{ student }}</li>
{% endfor %}

<br>

<p>Students not registered : </p>
{% for student in notRegistered %}
<li>{{ student }}</li>
{% endfor %}


{% endblock %}