{% extends 'base.html.twig' %}

{% block title %}Session's list{% endblock %}

{% block body %}

<h1>Session's list</h1>

<h2>Add a session</h2>
<a href="{{ path('new_session') }}" class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm sm:w-auto px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800 inline-block">Add a session</a>

{% for session in sessions %}
    <a href="{{ path('show_session', {'id': session.id}) }}">{{ session }}</a>
{% endfor %}

{% endblock %}